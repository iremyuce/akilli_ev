<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ana_sayfa_arka_plan"
    tools:context=".MainActivity">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="224dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                        <ImageButton
                            android:id="@+id/imageButtonmutfak"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/mutfak"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/imageButtonsalon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/salon"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/imageButtonantre"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/antre"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/imageButtonmisafir_odasi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/misafir_odasi"
                            android:scaleType="centerInside" />
                        <ImageButton
                            android:id="@+id/imageButtonebeveynyatakodasi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/yatak_odasi"
                            android:scaleType="centerInside" />
                        <ImageButton
                            android:id="@+id/imageButtoncocuk_odasi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/cocuk_odasi_buton"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/imageButtoncalisma_odasi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/calisma_odasi_buton"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/imageButtonebeveyn_banyosu"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/ebeveynbanyo"
                            android:scaleType="centerInside" />


                        <ImageButton
                            android:id="@+id/imageButtonkisbahcesi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/kisbahcesi"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/imageButtonbahce"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/bahce"
                            android:scaleType="centerInside" />

                </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="324dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="Akıllı Evim Odaları"
            android:textColor="@color/coffee"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="100dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
