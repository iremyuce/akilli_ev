<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/antre"
    tools:context=".MotionSensor">

    <ImageButton
        android:id="@+id/turnBackButton"
        android:layout_width="109dp"
        android:layout_height="41dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/geri"
        android:padding="15dp" />


    <TextView
        android:id="@+id/centered_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:text="Hareket Sensörü"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/alarmColdRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/value_image"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/motion_sensor"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/sensorOpenClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensör Aç/Kapa"
            android:padding="20dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/button_shape"/>
        <Button
            android:id="@+id/imageCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Görüntü Yakala"
            android:padding="20dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/button_shape"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/calculateDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesafe ölç"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/button_shape"/>

    </LinearLayout>


</LinearLayout>
