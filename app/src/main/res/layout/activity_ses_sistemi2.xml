<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ses_arka"
    tools:context=".SesSistemiActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:src="@drawable/ses_sistemi_gorsel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonBass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bass"
        android:background="#000000"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonJazz"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintWidth_percent="0.45" />


    <Button
        android:id="@+id/buttonJazz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jazz"
        android:background="#000000"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toEndOf="@id/buttonBass"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintWidth_percent="0.45" />


    <Button
        android:id="@+id/buttonRock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:background="#000000"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/buttonBass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonPop"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintWidth_percent="0.45" />


    <Button
        android:id="@+id/buttonPop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pop"
        android:background="#000000"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/buttonJazz"
        app:layout_constraintStart_toEndOf="@id/buttonRock"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintWidth_percent="0.45" />


    <ImageView
        android:id="@+id/volumeIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ses_sembol"
        app:layout_constraintTop_toBottomOf="@id/buttonRock"
        app:layout_constraintBottom_toTopOf="@id/seekBarVolume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <SeekBar
        android:id="@+id/seekBarVolume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:max="100"
        android:progress="50"
        android:progressBackgroundTint="#CCCCCC"
        android:progressTint="#000000"
        android:thumbTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


