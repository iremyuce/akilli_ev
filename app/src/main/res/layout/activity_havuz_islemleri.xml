<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HavuzIslemleriActivity">



    <TextView
        android:id="@+id/textViewTemizlikBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="396dp"
        android:text="Havuz Temizlik Kontrolü"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchTemizlik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temizlik Sistemi"
        app:layout_constraintTop_toBottomOf="@id/textViewTemizlikBaslik"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>


    <TextView
        android:id="@+id/textViewTemizlikDurumu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temizlik Durumu: Kapalı"
        app:layout_constraintTop_toBottomOf="@id/switchTemizlik"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>


    <TextView
        android:id="@+id/textViewSicaklikBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sıcaklık Kontrolü"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewTemizlikDurumu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>


    <SeekBar
        android:id="@+id/seekBarSicaklik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="40"
        app:layout_constraintTop_toBottomOf="@id/textViewSicaklikBaslik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/textViewSicaklik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mevcut Sıcaklık: 20°C"
        app:layout_constraintTop_toBottomOf="@id/seekBarSicaklik"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="410dp"
        android:layout_height="407dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/havuz_temizleme_gorsel" />
</androidx.constraintlayout.widget.ConstraintLayout>
