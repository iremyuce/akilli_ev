<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/salon"
    tools:context=".SmartFood">

    <ImageButton
        android:id="@+id/turnBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/turnback"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_shape"/>

    <TextView
        android:id="@+id/centered_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:text="Akıllı Yemek"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/alarmColdRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/value_image"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/smart"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/baslat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Başlat"
            android:padding="10dp"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/favorilereEkle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorilere Ekle"
            android:padding="10dp"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/paylas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paylaş"
            android:padding="10dp"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/alisverisListesineEkle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alışveriş Listesine Ekle"
            android:padding="10dp"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/yemekPlaninaEkle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yemek Planına Ekle"
            android:padding="10dp"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp"/>


    </LinearLayout>


</LinearLayout>
