<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/veranda"
    tools:context=".Veranda">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Veranda"
        android:layout_marginTop="10dp"/>
    <GridLayout
        android:id="@+id/gridLayoutAntre"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/title_view"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_margin="20dp"
        android:layout_marginTop="12dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/projeksiyonCardView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:elevation="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="100dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/projeksiyon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:paddingTop="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@drawable/projeksiyon" />

                <TextView
                    android:id="@+id/projeksiyonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projeksiyon"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/perdeCardView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="100dp"
            android:elevation="30dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/perdeImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/curtain" />

                <TextView
                    android:id="@+id/perdeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perde"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>
