<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/veranda"
    tools:context=".DoorLock">

    <ImageButton
        android:id="@+id/turnBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/turnback"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_shape"/>


    <TextView
        android:id="@+id/centered_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:text="Perde"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/doorRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/value_image"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/curtain"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/curtainOpenClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perde Aç/Kapa"
            android:padding="20dp"
            android:background="@drawable/button_shape"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/sesliKomut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sesli Komut"
            android:padding="20dp"
            android:background="@drawable/button_shape"
            android:layout_margin="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/sineklik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sineklik Aç/Kapa"
            android:padding="20dp"
            android:background="@drawable/button_shape"
            android:layout_margin="15dp"/>

    </LinearLayout>



</LinearLayout>
